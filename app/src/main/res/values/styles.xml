<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="buttonBarPositiveButtonStyle">@style/positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/negative</item>
        <item name ="android:background">#262A2C</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">#f3f3f3</item>
        <item name="android:textColor">#f3f3f3</item>
        <item name="android:textColorPrimary">#f3f3f3</item>
    </style>
    <style name="positive">
        <item name="android:textColor">#1B8E2D</item>
    </style>
    <style name="negative">
    <item name="android:textColor">#A42821</item>
</style>

</resources>
