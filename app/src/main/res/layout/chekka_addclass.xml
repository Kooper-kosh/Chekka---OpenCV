<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    // CREATE EXAM NAME
    <include layout="@layout/headerblankforchekka"
        android:id="@+id/header_student">
    </include>
    <RelativeLayout
        android:layout_below="@+id/header_student"
        android:layout_width="500dp"
        android:layout_height="800dp"
        android:background="@color/white"
        android:id="@+id/layout_for_addclass_white"
        android:visibility="visible">
        <RelativeLayout
            android:id="@+id/layout_addclass_CL"
            android:layout_width="280dp"
            android:layout_height="300dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="50dp"
            android:visibility="visible"
            android:background="@drawable/darkborder2">
            <FrameLayout
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"
                >
                <EditText
                    android:id="@+id/EditTextEnterClassName_CL"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:hint="Enter Class Name"
                    android:textColor="@color/color_2nddarker"
                    android:textColorHint="@color/color_2nddarker"
                    android:textAlignment="center"
                    android:background="@drawable/darkborder3"
                    android:gravity="center_horizontal" />
            </FrameLayout>

            <TextView
                android:id="@+id/ButtonCLOkay_CL"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="150dp"
                android:background="@drawable/greenbutton"
                android:layout_marginLeft="8dp"
                android:text="OK"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/ButtonCLCancel_CL"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="150dp"
                android:background="@drawable/redbutton"
                android:layout_marginLeft="130dp"
                android:text="CLEAR"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="@color/white" />
        </RelativeLayout>
    </RelativeLayout>
    <include
        layout="@layout/chekka_footer"/>
</RelativeLayout>