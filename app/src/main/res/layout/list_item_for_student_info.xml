<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for a single list item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
    android:padding="15dp"
    tools:context=".Chekka">

    <FrameLayout
        android:id="@+id/layout_listview_student_info_IF"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/rectangle10">

        <ImageView
            android:id="@+id/examname_icon_IF"
            android:background="@drawable/examexam"
            android:layout_width="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="40dp"
            android:layout_height="70dp"
           />
        <TextView
            android:id="@+id/examname_IF"
            android:fontFamily="sans-serif"
            android:textColor="@color/color_2nddarker"
            android:textSize="25dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="150dp"
            android:textStyle="bold"
            android:text="EXAM 101"
            android:layout_weight="1" />
        <TextView
            android:fontFamily="sans-serif"
            android:textColor="@color/color_2nddarker"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="150dp"
            android:textSize="15dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/scorename_IF"
            android:fontFamily="sans-serif"
            android:textColor="@color/color_2nddarker"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="150dp"
            android:textSize="15dp"
            android:text=""
            android:layout_weight="1" />

        <TextView
            android:fontFamily="sans-serif"
            android:textColor="@color/color_2nddarker"
            android:textSize="15dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="2dp"
            android:text=""
            android:layout_weight="1" />
        <TextView
            android:id="@+id/score_IF"
            android:fontFamily="sans-serif"
            android:textColor="@color/color_2nddarker"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="200dp"
            android:textSize="15dp"
            android:text="/"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/itemname_IF"
            android:fontFamily="sans-serif"
            android:textColor="@color/color_2nddarker"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="230dp"
            android:textSize="15dp"
            android:text="100"
            android:layout_weight="1" />
        <TextView
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="2dp"
            android:text=""
            android:layout_weight="1" />
        <TextView
            android:visibility="invisible"
            android:id="@+id/itemaverage_IF"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="100dp"
            android:text=""
            android:layout_weight="1" />
        <TextView
            android:fontFamily="sans-serif"
            android:textColor="@color/darkpink"
            android:textSize="15dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="150dp"
            android:text=""
            android:layout_weight="1" />
    </FrameLayout>
</LinearLayout>