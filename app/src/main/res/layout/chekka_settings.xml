<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    //LOG OUT, SETTINGS, SEND FEEDBACK

    <RelativeLayout
        android:id="@+id/layout_logout_LO"
        android:layout_width="412dp"
        android:layout_height="1000dp"
        android:visibility="visible"
        android:background="@color/white">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:clickable="true"
            app:civ_border_width="3dp"
            app:civ_border_color="#FFFFFFFF"
            android:id="@+id/profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="150dp"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cutie" />

        <TextView
            android:id="@+id/TextViewTUserName_LO"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginTop="200dp"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:text="TEACHER"
            android:textAlignment="center"
            android:textColor="@color/color_2nddarker"/>
        <TextView
            android:id="@+id/TextViewTGMail_LO"
            android:textAlignment="center"
            android:layout_width="4000dp"
            android:layout_height="80dp"
            android:layout_marginTop="240dp"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:text=""
            android:textColor="@color/color_2nddarker"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/ButtonTSettings_LO"
            android:layout_width="290dp"
            android:layout_height="80dp"
            android:layout_marginTop="310dp"
            android:textSize="20dp"
            android:text="SETTINGS"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_2nddarker"/>
        <TextView
            android:id="@+id/ButtonTSendFeedBack_LO"
            android:layout_width="290dp"
            android:layout_height="80dp"
            android:layout_marginTop="360dp"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="CHANGE PASSWORD"
            android:textColor="@color/color_2nddarker"/>
        <TextView
            android:id="@+id/ButtonTLogOut_LO"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="450dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/logout_btn"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textColor="@color/color_2nddarker"
            android:gravity="center_horizontal" />
        <ImageView
            android:id="@+id/BackLogout_LO"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/backpo">
        </ImageView>

    </RelativeLayout>
        //PASSWORD
        <FrameLayout
            android:id="@+id/layout_twopassword_SET"
            android:layout_width="412dp"
            android:layout_height="900dp"
            android:visibility="invisible"
            android:background="@color/color_2nddarker">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="100dp"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="CHANGE PASSWORD"
                android:gravity="center_horizontal" />

            <EditText
                android:id="@+id/EditTextNewPassword_SET"
                android:inputType="textPassword"
                android:layout_height="50dp"
                android:layout_width="250dp"
                android:background="@drawable/lightborder"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="170dp"
                android:textColor="#000"
                android:hint="Password"
                android:drawableLeft="@drawable/ic_lock"/>

            <EditText
                android:id="@+id/EditTextConPassword_SET"
                android:inputType="textPassword"
                android:layout_height="50dp"
                android:layout_width="250dp"
                android:background="@drawable/lightborder"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="230dp"
                android:textColor="#000"
                android:hint="Re-type Password"
                android:drawableLeft="@drawable/ic_lock"/>


            <TextView
                android:id="@+id/ButtonMConfirmPassword_SET"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="300dp"
                android:background="@drawable/approve"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="#000"
                android:gravity="center_horizontal" />

            <ImageView
                android:id="@+id/BackPassword_SET"
                android:background="@drawable/backarrow"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="600dp"
                android:layout_marginLeft="150dp" />
        </FrameLayout>

    </RelativeLayout>
