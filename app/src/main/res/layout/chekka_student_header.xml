<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:id="@+id/customToolbarID"
    android:padding="9dp"
    tools:context=".Chekka_dashboard_classes"
    android:background="@color/color_2nddarker">


        <FrameLayout
            android:id="@+id/header_student_dash_CH"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:visibility="visible">
            <TextView
                android:visibility="visible"
                android:id="@+id/TextViewChanging_CH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="4dp"
                android:text=""
                android:textSize="25dp"
                android:textColor="@color/white"
               />
            <ImageView
                android:id="@+id/header_student_img_CH"
                android:visibility="visible"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="300dp"
                app:srcCompat="@drawable/ic_back"/>
        </FrameLayout>


</RelativeLayout>