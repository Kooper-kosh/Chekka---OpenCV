<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    //CLASS LIST
    <include layout="@layout/chekka_dashboard_header"
        android:visibility="invisible"
        android:id="@+id/layout_class"/>

    <RelativeLayout
        android:id="@+id/class_view"
        android:layout_width="450dp"
        android:layout_height="90dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/finish_dastud"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/backpo">
        </ImageView>
        <TextView
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/color_2nddarker"
            android:textStyle="bold"
            android:textSize="25dp"

            android:text="RESULTS"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="43dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="57dp"
            android:background="@drawable/classiconnie"
        />

        <TextView
            android:id="@+id/nu_stud"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_marginLeft="126dp"
            android:layout_marginTop="65dp"
            android:textColor="@color/color_2nddarker"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="100"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/class_view"
        android:id="@+id/layout_listview_class"
        android:layout_width="500dp"
        android:layout_height="800dp"
        android:background="@color/white"
        android:visibility="visible">

        <ListView
            android:id="@+id/listview_classname"
            android:layout_width="400dp"
            android:layout_height="900dp"
            android:visibility="visible"
            >
        </ListView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/popforclass_PP"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/forgett"
        android:visibility="invisible">
        <TextView
            android:id="@+id/buttxt_viewclassname_PP"
            android:layout_width="150dp"
            android:layout_height="47dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="-45dp"
            android:gravity="center"
            android:text="VIEW CLASS"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:background="@drawable/darkborder2"
            android:fontFamily="sans-serif"
            />
        <TextView
            android:id="@+id/buttxt_editclassname_PP"
            android:layout_width="150dp"
            android:layout_height="47dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="-45dp"
            android:gravity="center"
            android:text="EDIT CLASSNAME"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:background="@drawable/darkborder2"
            android:fontFamily="sans-serif"
            />

        <TextView
            android:id="@+id/buttxt_deleteclassname_PP"
            android:layout_width="150dp"
            android:layout_height="47dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:layout_marginBottom="-45dp"
            android:gravity="center"
            android:text="DELETE CLASS NAME"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:background="@drawable/darkborder2"
            android:fontFamily="sans-serif" />

        <ImageView
            android:id="@+id/button_closepopforclass_PP"
            android:background="@drawable/net_cancel"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="100dp" />
    </RelativeLayout>

</RelativeLayout>