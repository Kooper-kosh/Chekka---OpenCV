<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    //CLASS LIST
    <include layout="@layout/chekka_student_header"
        android:visibility="invisible"/>
    <RelativeLayout
        android:id="@+id/class_view"
        android:layout_width="450dp"
        android:layout_height="150dp"
        android:background="@color/white"
        android:visibility="visible">

        <ImageView
            android:id="@+id/finish_dastud"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/backpo">
        </ImageView>
        <TextView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/color_2nddarker"
            android:textSize="18sp"
            android:text="Student Name: "
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/sna_info"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/color_2nddarker"
            android:textSize="18sp"
            android:text=""
          />
        <TextView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="80dp"
            android:textColor="@color/color_2nddarker"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Student Number: "/>
        <TextView
            android:id="@+id/snu_info"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="80dp"
            android:textColor="@color/color_2nddarker"
            android:textSize="18sp"
            android:text=""
         />
        <TextView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="110dp"
            android:textColor="@color/color_2nddarker"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Email: "/>
        <TextView
            android:id="@+id/em_info"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="110dp"
            android:textColor="@color/color_2nddarker"
            android:textSize="18sp"
            android:text=""
          />
    </RelativeLayout>

    // STUDENT INFO
    <RelativeLayout
        android:id="@+id/layout_listview_student_info"
        android:layout_below="@+id/class_view"
        android:layout_width="390dp"
        android:layout_height="550dp"
        android:visibility="visible"
        android:background="@color/white">

        <ListView
            android:id="@+id/listview_student_info"
            android:layout_width="400dp"
            android:layout_height="530dp"
            >
        </ListView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/popforstudent_PP"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/forgett"
        android:visibility="invisible">
        <TextView
            android:id="@+id/buttxt_viewstudent_PP"
            android:layout_width="150dp"
            android:layout_height="47dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="-45dp"
            android:gravity="center"
            android:text="VIEW CLASS"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:background="@drawable/darkborder2"
            android:fontFamily="sans-serif"
            />
        <TextView
            android:id="@+id/buttxt_editstudent_ST"
            android:layout_width="150dp"
            android:layout_height="47dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="-45dp"
            android:gravity="center"
            android:text="EDIT CLASSNAME"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:background="@drawable/darkborder2"
            android:fontFamily="sans-serif"
            />

        <TextView
            android:id="@+id/buttxt_deletestudent_ST"
            android:layout_width="150dp"
            android:layout_height="47dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:layout_marginBottom="-45dp"
            android:gravity="center"
            android:text="DELETE CLASS NAME"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:background="@drawable/darkborder2"
            android:fontFamily="sans-serif" />

        <ImageView
            android:id="@+id/button_closepopforstudent_ST"
            android:background="@drawable/net_cancel"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="100dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_imagetesting"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="invisible"
        android:background="@drawable/rectangleshadow"
        >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rec11"
            >
    <ImageView
        android:id="@+id/imageviewtesting"
        android:layout_width="220dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
    />
        <RelativeLayout
            android:id="@+id/savepic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="350dp"
            android:background="@drawable/picsavesave"
            >
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/gmailpic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="350dp"
            android:background="@drawable/gmailsavesave"
            >
        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/cross"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="60dp"

                android:background="@drawable/ekis"
                >

            </RelativeLayout>
        </RelativeLayout>

</RelativeLayout>
</RelativeLayout>