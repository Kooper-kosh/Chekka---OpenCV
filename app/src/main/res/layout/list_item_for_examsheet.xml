<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for a single list item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:padding="15dp"
    tools:context=".Chekka">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:background="@drawable/examrectangle">

        <ImageView
            android:id="@+id/item_class_name_icon_CL"
            android:background="@drawable/examicon"
            android:layout_width="70dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/item_examname_EN"
            android:fontFamily="sans-serif"
            android:textColor="@color/color_2nddarker"
            android:textSize="25dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="120dp"
            android:textStyle="bold"
            android:text="EXAM"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/item_date_EN"
            android:fontFamily="sans-serif"
            android:textColor="@color/color_2nddarker"
            android:textSize="15dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="120dp"
            android:text="2021/08/25"
            android:layout_weight="1" />
        <TextView
            android:visibility="invisible"
            android:id="@+id/item_text_set"
            android:textColor="@color/color_2nddarker"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="120dp"
            android:text="Exam Set: "
            android:layout_weight="1" />

        <TextView
            android:visibility="invisible"
            android:id="@+id/item_examset_EN"
            android:textColor="@color/color_2nddarker"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="190dp"
            android:text=""
            android:layout_weight="1" />
        <TextView
            android:textColor="@color/color_2nddarker"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="120dp"
            android:text="Number of Items: "
            android:layout_weight="1" />
        <TextView
            android:id="@+id/itemcount"
            android:textColor="@color/color_2nddarker"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="230dp"
            android:text=""
            android:layout_weight="1" />

        <TextView
            android:visibility="invisible"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="100dp"
            android:text="Date: "
            android:layout_weight="1" />



    </FrameLayout>
</LinearLayout>