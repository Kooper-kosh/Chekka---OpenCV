<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Chekka">


        <!-- BottomNavigationView aligned at bottom of Activity -->
        <android.support.design.widget.BottomNavigationView
            android:layout_alignParentBottom="true"
            android:id="@+id/bottom_navigation"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:scaleType="fitXY"
            android:background="@drawable/rectangle_bottom_navigation3"
            app:menu="@layout/btmnav_as_menu"
            app:itemIconTint="@layout/btmnav_selector"
            app:itemTextColor="@layout/btmnav_selector" />

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigationnextprev"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/color_2nddarker"
            app:menu="@layout/btmnav_as_menunextprev"
            app:itemIconTint="@layout/btmnav_selectornextprev"
            app:itemTextColor="@layout/btmnav_selectornextprev" />
        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigationblock"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/color_2nddarker"
            app:menu="@layout/btmnav_as_menublock"
            app:itemBackground="@color/color_2nddarker"
            app:itemIconTint="@layout/btmnav_selectornextprev"
            app:itemTextColor="@layout/btmnav_selectornextprev" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_savesections"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/color_2nddarker"
        app:menu="@layout/btmnav_as_menusavesections"
        app:itemBackground="@color/color_2nddarker"
        app:itemIconTint="@layout/btmnav_selectornextprev"
        app:itemTextColor="@layout/btmnav_selectornextprev" />
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_saveimage"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/color_2nddarker"
        app:menu="@layout/btmnav_as_menusaveimage"
        app:itemBackground="@color/color_2nddarker"
        app:itemIconTint="@layout/btmnav_selectornextprev"
        app:itemTextColor="@layout/btmnav_selectornextprev" />

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_as_back"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/color_2nddarker"
            app:menu="@layout/btmnav_as_back"
            app:itemBackground="@color/color_2nddarker"
            app:itemIconTint="@layout/btmnav_selectornextprev"
            app:itemTextColor="@layout/btmnav_selectornextprev" />

    <FrameLayout
        android:id="@+id/noaction_CF"
        android:layout_width="410dp"
        android:layout_height="100dp"
        android:background="@color/color_2nddarker"
        android:layout_marginTop="690dp"
        android:visibility="invisible">

    </FrameLayout>
</RelativeLayout>