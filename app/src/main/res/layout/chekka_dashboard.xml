<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background"
        android:id="@+id/layout_dashboard_DA"
        android:visibility="visible">

        <ImageView
            android:id="@+id/finish_dastud"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/back_icon_white">
        </ImageView>
        <ImageView
            android:id="@+id/settings_dastud"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/settings_icon">
        </ImageView>
        <FrameLayout
            android:layout_width="450dp"
            android:layout_height="150dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:clickable="true"
                app:civ_border_width="3dp"
                app:civ_border_color="#FFFFFFFF"
                android:id="@+id/profile"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:elevation="5dp"
                android:padding="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cutie" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="50dp"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:text="Welcome,"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="85dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="30dp"
                android:text="Teacher"/>
        </FrameLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="150dp"
    android:orientation="vertical">
            // PAPER
<RelativeLayout
    android:layout_width="400dp"
    android:layout_height="150dp">
            <RelativeLayout
                android:id="@+id/paper"
                android:layout_width="200dp"
                android:layout_height="200dp"
                >
                <ImageView
                    android:id="@+id/paper1"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/groupexam"/>
            </RelativeLayout>
    <RelativeLayout
        android:id="@+id/itemanalysisbutton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="150dp">

        <ImageView
            android:id="@+id/analysis"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/groupanalysis"/>

    </RelativeLayout>
</RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="400dp"
        android:layout_height="150dp">
            // STUD
            <RelativeLayout
                android:id="@+id/student_edit"
                android:layout_width="200dp"
                android:layout_height="200dp"
             >

                <ImageView
                    android:id="@+id/stud"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/groupstudents"/>

            </RelativeLayout>
        <RelativeLayout
            android:id="@+id/exportexcel"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="150dp">

            <ImageView
                android:id="@+id/shared"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/groupexcel"/>

        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="400dp"
        android:layout_height="150dp">
            // TWO PERSON
            <RelativeLayout

                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/ButtonCLASSES_DA">

                <ImageView
                    android:id="@+id/twoperson"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/groupclass"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/viewall"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginLeft="150dp">

                <ImageView
                    android:id="@+id/about"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/groupresult"/>

            </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
    </RelativeLayout>
</RelativeLayout>