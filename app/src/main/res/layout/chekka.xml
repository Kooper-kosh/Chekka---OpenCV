<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Chekka">


    // HEADER
    <include layout="@layout/chekka_header"
        android:id="@+id/chekka_header_id"/>

    <RelativeLayout
        android:layout_below="@+id/chekka_header_id"
        android:id="@+id/layout_listview_examsheet"
        android:layout_width="390dp"
        android:layout_height="1000dp"
        android:visibility="visible">

        <ListView
            android:id="@+id/listview_examsheet"
            android:layout_width="350dp"
            android:layout_height="1000dp"
            >
        </ListView>
    </RelativeLayout>
    // FOOTER

    // MIDDLE
    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="800dp"
        android:layout_marginTop="55dp">

        <TextView
            android:id="@+id/txt_welcome"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:text="@string/Noteswelcome"
            android:textSize="20dp"
            android:textColor="@color/color_2nddarker"
            android:visibility="invisible"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/txt_class_done"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:text="@string/NotesClass"
            android:textSize="20dp"
            android:textColor="@color/color_2nddarker"
            android:visibility="invisible"
            android:gravity="center_horizontal" />
        // STUDENT LISTVIEW


        // STUDENT INFO
        <RelativeLayout
            android:id="@+id/layout_listview_student_info"
            android:layout_width="390dp"
            android:layout_height="550dp"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            android:background="@color/white">

            <ListView
                android:id="@+id/listview_student_info"
                android:layout_width="400dp"
                android:layout_height="530dp"
                >
            </ListView>
        </RelativeLayout>


        // EXAM



        //CLASS LIST
        <RelativeLayout
            android:id="@+id/layout_listview_class"
            android:layout_width="390dp"
            android:layout_height="900dp"
            android:background="@color/white"
            android:visibility="invisible">

            <ListView
                android:id="@+id/listview_classname"
                android:layout_width="400dp"
                android:layout_height="900dp"
                android:visibility="invisible"
                >
            </ListView>
        </RelativeLayout>

        // ADD CLASS


        // DASHBOARD

        // EDIT CLASS NAME

        <RelativeLayout
            android:id="@+id/layout_editlass_EC"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="25dp"
            android:visibility="invisible"
            android:background="@drawable/darkborder2">
            <FrameLayout
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"
                >
                <EditText
                    android:id="@+id/EditTextEnterEditClassName_EC"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="EDIT Class Name"
                    android:textColor="@color/color_2nddarker"
                    android:textColorHint="@color/color_2nddarker"
                    android:textAlignment="center"
                    android:background="@drawable/darkborder3"
                    android:gravity="center_horizontal" />
            </FrameLayout>
            <TextView
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="EDIT CLASS NAME"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="100dp"/>
            <TextView
                android:id="@+id/ButtonEditOkay_EC"
                android:layout_width="130dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_marginTop="130dp"
                android:background="@drawable/forgettt"
                android:layout_marginLeft="20dp"
                android:text="OK"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/ButtonEditCancel_EC"
                android:layout_width="130dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_marginTop="130dp"
                android:background="@drawable/forgettt"
                android:layout_marginLeft="170dp"
                android:text="CANCEL"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/white" />
        </RelativeLayout>




        // PROCEED SET 2
        <RelativeLayout
            android:layout_width="500dp"
            android:layout_height="700dp"
            android:background="@color/white"
            android:id="@+id/layout_proceedset2"
            android:visibility="invisible">


            <TextView
                android:id="@+id/button_proceedset2_P2"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginTop="300dp"
                android:background="@drawable/forgett"
                android:layout_marginLeft="50dp"
                android:text="EXAM SET 1 SAVED! Please, proceed to set 2. Click me! "
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/color_2nddarker"
                android:visibility="invisible"
                android:gravity="center_horizontal" />
        </RelativeLayout>
        // CIRCLE


</RelativeLayout>
        <FrameLayout
            android:id="@+id/layout_addoptions_CO"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/rectangleshadow"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/ButtonCOAddExamSheet_CO"
                android:layout_width="210dp"
                android:layout_height="60dp"
                android:layout_marginTop="350dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/add_exam_icon"/>
            <ImageView
                android:id="@+id/ButtonCOAddClass_CO"
                android:layout_width="210dp"
                android:layout_height="60dp"
                android:layout_marginTop="450dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/add_class_icon"/>
            <ImageView
                android:id="@+id/ButtonCOAddStudent_CO"
                android:layout_width="210dp"
                android:layout_height="60dp"
                android:layout_marginTop="550dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/add_student_icon2"/>

        </FrameLayout>


        //SCROLL FOR EXAM LIST


    //LOG OUT, SETTINGS, SEND FEEDBACK

    // Two Password
    <FrameLayout
        android:id="@+id/layout_twopassword_SET"
        android:layout_width="412dp"
        android:layout_height="900dp"
        android:layout_marginTop="50dp"
        android:visibility="invisible"
        android:background="@color/color_2nddarker">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="100dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="CHANGE PASSWORD"
            android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/EditTextNewPassword_SET"
            android:inputType="textPassword"
            android:layout_height="50dp"
            android:layout_width="340dp"
            android:background="@drawable/lightborder"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="170dp"
            android:textColor="#000"
            android:hint="Password"
            android:drawableLeft="@drawable/ic_lock"/>

        <EditText
            android:id="@+id/EditTextConPassword_SET"
            android:inputType="textPassword"
            android:layout_height="50dp"
            android:layout_width="340dp"
            android:background="@drawable/lightborder"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="230dp"
            android:textColor="#000"
            android:hint="Re-type Password"
            android:drawableLeft="@drawable/ic_lock"/>



        <TextView
            android:id="@+id/ButtonMConfirmPassword_SET"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/button"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="CONFIRM"
            android:textColor="#000"
            android:gravity="center_horizontal" />

    </FrameLayout>
    <TextView
        android:id="@+id/TextViewTID_LO"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="135dp"
        android:textSize="25dp"
        android:text=""
        android:visibility="invisible"
        android:textColor="@color/white"/>
    // POP FOR CLASS

    // POP FOR EXAM

    <ImageView
        android:id="@+id/imageviewtesting"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       />
    <include layout="@layout/chekka_footer"
        android:id="@+id/chekka_fot"/>
    <ImageView
        android:id="@+id/ButtonCAdd_CIR"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/add_button"
        android:visibility="visible"/>
    <ImageView
        android:id="@+id/ButtonCExit_CIR"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/exit_add_selection_btn"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/ButtonCMinus_CIR"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:gravity="bottom|center_horizontal"
        android:layout_marginLeft="148dp"
        android:background="@drawable/exit_add_selection_btn"
        android:visibility="invisible"/>

    <RelativeLayout
        android:id="@+id/popforexam"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="invisible"
        android:background="@drawable/rectangleshadow">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rectanglepop"
     >
        <RelativeLayout
            android:id="@+id/button_scan_answerkey_PE"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="50dp"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/scan_answer_key_icon">

            </RelativeLayout>
            <TextView

                android:layout_width="150dp"
                android:layout_height="47dp"
                android:gravity="center"
                android:text="SCAN ANSWER KEY"
                android:textColor="@color/color_2nddarker"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="60dp"
                android:fontFamily="sans-serif"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/button_scan_answersheet_PE"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="40dp"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/scan_answer_sheet_icon">
            </RelativeLayout>
            <TextView
                android:visibility="visible"
                android:textStyle="bold"
                android:layout_width="250dp"
                android:layout_height="47dp"
                android:gravity="center"
                android:text="SCAN ANSWER SHEET"
                android:textColor="@color/color_2nddarker"
                android:textSize="15dp"
                android:layout_marginLeft="60dp"
                android:fontFamily="sans-serif"
                />

        </RelativeLayout>
        <TextView
            android:visibility="invisible"
            android:id="@+id/button_delete_exam_PE"
            android:layout_width="150dp"
            android:layout_height="47dp"
            android:gravity="center"
            android:text="DELETE EXAM NAME"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:background="@drawable/darkborder2"
            android:fontFamily="sans-serif" />
        <TextView
            android:id="@+id/button_examname_PE"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:visibility="invisible"
            android:textColor="@color/color_2nddarker"
            android:text="kdaojwe"
            />
        <ImageView
            android:id="@+id/button_close_exam_PE"
            android:background="@drawable/close_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="300dp"
            />

        <ImageView
            android:visibility="invisible"
            android:id="@+id/button_Viewimage"
            android:background="@drawable/ic_save"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="150dp" />
    </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/popclassname"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="invisible"
        android:background="@drawable/rectangleshadow"
        >
        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/rec5"
            >
            <ImageView
                android:id="@+id/ekisclassname"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="200dp"
                android:background="@drawable/ekis"
                android:layout_marginTop="10dp">

            </ImageView>
            <EditText
                android:id="@+id/editclassname"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/grayborder"
                android:hint="Enter Class Name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp">
            </EditText>
            <ImageView
                android:id="@+id/saveclassmname"
                android:layout_width="150dp"
                android:layout_height="54dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/save_btn"
                android:layout_marginTop="120dp">
            </ImageView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>